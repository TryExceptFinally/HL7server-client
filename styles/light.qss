#MainWidget {
    background: white;
}

QStatusBar {
    font: 13px;
}

QDockWidget {
    font: bold 14px;
    background: #060122;
    max-width: 340px;
}

QDockWidget::title {
    background: #F1F1F2;
    border: 1px solid #2496ED;
    border-radius: 5px;
    text-align: center;
}

QDockWidget::close-button {
    background: white;
    border: 1px solid #2496ED;
    border-radius: 5px;
    subcontrol-position: top right;
    subcontrol-origin: margin;
    top: 2px; right: 2px;
}

QDockWidget::close-button:hover {
    background: #fa3232;
}

QMenuBar {
    background: #F1F1F2;
    border-bottom: 1px solid #1E7DC5;
}

QMenuBar::item {
    background: transparent;
}

QMenuBar::item:selected {
    border-bottom: 4px solid #2496ED;
}

QMenuBar::item:pressed {
    border-bottom: 4px solid #1E7DC5;
}

QMenu {
    background: #F1F1F2;
    border: 1px solid #2496ED;
}

QMenu::item:selected {
    background: #2496ED;
}

QPlainTextEdit {
    background: #F1F1F2;
    border: 1px solid #2496ED;
    font: bold 13px;
    border-radius: 5px;
    padding: 1 1px;
}

QPlainTextEdit:read-only {
    border: 1px solid gray;    
}

QLabel#statusLabel {
    font: 14px;
}

QLabel#titleLabel {
    font: bold 14px;
    min-width: 5em;
    max-width: 5em;
    min-height: 1em;
    padding: 0 10px;
}

QLineEdit { 
    background: #F1F1F2;
    font: 15px;
    border: 1px solid #2496ED;
    border-radius: 5px; 
    height: 1em;
    min-width: 9em;
    max-width: 9em;
    padding: 3 3px;
}

QLineEdit:read-only { 
    border: 1px solid gray 
}

QPushButton {
    color: white;
    background: #2496ED;
    border: 1px solid #1E7DC5;
    border-style: outset;
    border-radius: 5px;
    font: bold 14px;
    min-width: 10em;
    max-width: 320px;
    height: 1em;
    padding: 3 3px;
}

QPushButton:hover {
    background: #1E7DC5;
    border-style: outset;
}

QPushButton:pressed {
    border-style: inset;
}

QPushButton:!enabled {
    color: lightgray;
}

QTabWidget::pane {
    border: 1px solid #1E7DC5;
    border-radius: 5px;
    border-top-left-radius: 0px;
}

QTabBar::tab {
    color: white;
    background: #1E7DC5; 
    border: 1px solid #1E7DC5;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
    padding: 0 10px;
    font: bold 14px;
}

QTabBar::tab:selected {
    background: #2496ED;
}

QTabBar::tab:!selected {
    margin-top: 4px;
}

QCheckBox {
    width: 100px;
    max-width: 5em;
}

QListWidget {
    background: #F1F1F2;
    border-radius: 5px;
    border: 1px solid #2496ED;
    font: 16px;
    min-width: 320px;
}